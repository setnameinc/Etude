<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="#4E4DA7">

    <TextView
        android:id="@+id/startTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="@id/endTimeTextView"
        android:text="9:00"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/timeSeparator"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/endTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="3dp"
        android:includeFontPadding="false"
        android:text="10:30"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeSeparator" />

    <View
        android:id="@+id/timeSeparator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@id/endTimeTextView"
        app:layout_constraintStart_toStartOf="@+id/endTimeTextView"
        app:layout_constraintTop_toBottomOf="@id/startTimeTextView" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/usCircleView"
        app:layout_constraintStart_toStartOf="@+id/usCircleView" />

    <View
        android:id="@+id/usCircleView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_business_oval"
        app:layout_constraintBottom_toBottomOf="@+id/endTimeTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/startTimeTextView" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        android:text="Математика"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/endTimeTextView"
        app:layout_constraintTop_toBottomOf="@+id/classroomTextView" />

    <View
        android:id="@+id/usClassroomView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_subject_background"
        app:layout_constraintBottom_toBottomOf="@id/classroomTextView"
        app:layout_constraintEnd_toEndOf="@id/classroomTextView"
        app:layout_constraintStart_toStartOf="@id/classroomTextView"
        app:layout_constraintTop_toTopOf="@id/classroomTextView" />

    <TextView
        android:id="@+id/classroomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:includeFontPadding="false"
        android:paddingStart="5dp"
        android:paddingEnd="6dp"
        android:paddingBottom="1dp"
        android:text="410 лекция"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/timeSeparator"
        app:layout_constraintStart_toStartOf="@+id/nameTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:visibility="gone"
        android:id="@+id/sizeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/usCircleView"
        app:layout_constraintEnd_toEndOf="@+id/usCircleView"
        app:layout_constraintStart_toStartOf="@+id/usCircleView"
        app:layout_constraintTop_toTopOf="@+id/usCircleView" />

</androidx.constraintlayout.widget.ConstraintLayout>